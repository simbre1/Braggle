<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.App.Light"
           parent="Theme.AppCompat.Light">
        <item name="primaryButtonTheme">
            @style/Widget.Button.Primary
        </item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorTextNotFound">?android:textColorPrimary</item>
        <item name="colorTextFound">@color/colorAccent</item>
        <item name="colorDiceBackground">?android:colorBackground</item>
        <item name="colorDice">@color/colorPrimary</item>
        <item name="colorDiceHit">@color/colorAccent</item>
        <item name="colorDiceDisabled">?android:textColorSecondary</item>
        <item name="colorDiceCorrectWord">@color/colorCorrectWord</item>
        <item name="colorDiceWrongWord">@color/colorWrongWord</item>
        <item name="colorDiceRepeatedWord">@color/colorRepeatedWord</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.App.Dark"
           parent="Theme.AppCompat">
        <item name="primaryButtonTheme">
            @style/Widget.Button.Primary
        </item>
        <item name="colorTextNotFound">?android:textColorPrimary</item>
        <item name="colorTextFound">?android:colorAccent</item>
        <item name="colorDiceBackground">?android:colorBackground</item>
        <item name="colorDice">?android:colorForeground</item>
        <item name="colorDiceHit">?android:colorAccent</item>
        <item name="colorDiceDisabled">@color/dark_colorDiceDisabled</item>
        <!--<item name="colorDiceDisabled">?android:textColorSecondary</item>-->
        <item name="colorDiceCorrectWord">@color/colorCorrectWord</item>
        <item name="colorDiceWrongWord">@color/colorWrongWord</item>
        <item name="colorDiceRepeatedWord">@color/colorRepeatedWord</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.Button.Primary"
           parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">?attr/buttonNormalColor</item>
        <item name="colorControlHighlight">
            ?attr/buttonHighlightColor
        </item>
        <item name="android:textColor">?attr/buttonTextColor</item>
    </style>

    <style name="GameScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="LLScreen" parent="@style/GameScreen">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">30dp</item>
    </style>

    <style name="InvPopup" parent="@style/LLScreen">
        <!--<item name="android:background">@color/PopupColor</item>-->
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="GameTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/app_name</item>
        <!--<item name="android:textColor">@color/colorAccent</item>-->
        <!--<item name="android:textSize">@dimen/TitleSize</item>-->
        <item name="android:layout_marginBottom">40dp</item>
    </style>

    <style name="Blurb">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:textColor">@color/BlurbColor</item>-->
    </style>

    <style name="GameBlurb" parent="@style/Blurb">
        <item name="android:text">@string/game_blurb</item>
        <item name="android:layout_marginBottom">40dp</item>
    </style>

    <style name="SignInButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="GameButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:background">@color/AccentColor</item>-->
        <!--<item name="android:textColor">@color/ButtonTextColor</item>-->
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="MainScreenButton" parent="@style/GameButton">
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="MainScreenButtonBlurb" parent="@style/GameBlurb">
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="InvPopupText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <!--<item name="android:textColor">@color/PopupTextColor</item>-->
        <item name="android:text">@string/inv_popup_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="InvPopupButton" parent="@style/GameButton">
        <!--<item name="android:background">@color/ButtonTextColor</item>-->
        <!--<item name="android:textColor">@color/AccentColor</item>-->
    </style>

    <style name="SignOutButton" parent="@style/GameButton">
        <!--<item name="android:background">@color/SignOutButtonBackground</item>-->
        <!--<item name="android:textColor">@color/SignOutButtonTextColor</item>-->
    </style>
</resources>