<?xml version="1.0" encoding="utf-8"?>
<set>
    <objectAnimator
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:duration="1000"
            android:propertyName="rotation"
            android:valueFrom="0"
            android:valueTo="360"/>
    <objectAnimator
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:duration="500"
            android:propertyName="scaleX"
            android:valueFrom="0"
            android:valueTo="1"/>
    <objectAnimator
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:duration="500"
            android:propertyName="scaleY"
            android:valueFrom="0"
            android:valueTo="1"/>
    <objectAnimator
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:startOffset="500"
            android:duration="500"
            android:propertyName="scaleX"
            android:valueFrom="1"
            android:valueTo="0"/>
    <objectAnimator
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:startOffset="500"
            android:duration="500"
            android:propertyName="scaleY"
            android:valueFrom="1"
            android:valueTo="0"/>
</set>
